---
import Button from "../components/button.astro"
---

<section class="text-center bg-700">
	<div class="container">
		<img class="mb-8 mx-auto" src="/images/illustration-intro.png" alt="fylo intro" />
		<div class="mx-auto max-w-prose">
			<h1 class="mb-2">All your files in one secure location, accessible anywhere.</h1>
			<p class="mb-6">
				Fylo stores all your most important files in one secure location. Access them wherever you
				need, share and collaborate with friends family, and co-workers.
			</p>
		</div>
		<Button class="max-w-xs btn">Get started</Button>
	</div>
</section>

<style>
	section {
		padding-block: var(--sp-4);
		background-image: url(/images/bg-curvy-mobile.svg);
		background-repeat: no-repeat;
		background-position: bottom;
		background-size: contain;
	}

	h1 {
		font-size: var(--fs-700);
	}

	@media (min-width: 48em) {
		section {
			padding-block: var(--sp-16) var(--sp-40);
			background-image: url(/images/bg-curvy-desktop.svg);
		}

		h1 {
			font-size: var(--fs-900);
			margin-bottom: var(--sp-10);
		}

		p {
			font-size: var(--fs-600);
			margin-bottom: var(--sp-8);
		}

		.btn {
			font-size: var(--fs-500);
		}
	}
</style>
