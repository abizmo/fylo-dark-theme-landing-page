---
import Button from "../components/button.astro"
---

<form class="cta-form" novalidate id="newsletter">
	<div class="form-group">
		<input class="fs-200" id="email" type="email" required />
		<span class="fs-200 error" aria-live="polite"></span>
	</div>
	<Button>Get Started For Free</Button>
</form>

<style>
	.cta-form {
		display: grid;
		gap: var(--sp-4);
	}

	.form-group {
		display: grid;
		gap: var(--sp-1);
		grid-auto-columns: 100%;
	}

	input {
		height: var(--sp-10);
		padding-inline: var(--sp-6);
		border-radius: var(--br-full);
		border: 0;
	}

	@media (min-width: 48em) {
		.cta-form {
			grid-template-columns: 1fr max-content;
		}

		input {
			height: var(--sp-12);
			font-size: var(--fs-300);
		}

		.error {
			height: var(--sp-5);
			font-size: var(--fs-300);
		}
	}
</style>

<script>
	const form = document.getElementById("newsletter")
	const email = document.getElementById("email") as HTMLInputElement
	const emailError = document.querySelector("#email + .error") as HTMLSpanElement

	email?.addEventListener("input", () => {
		if (email.validity.valid) {
			emailError.textContent = ""
			emailError.classList.remove("active")
		} else {
			showError()
		}
	})

	form?.addEventListener("submit", (evt) => {
		evt.preventDefault()
		if (!email.validity.valid) {
			showError()
		} else {
			console.log("submitted")
		}
	})

	function showError() {
		emailError.textContent = "Please enter a valid email address"
		emailError.classList.add("active")
	}
</script>
